<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeDetailsActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:fadeScrollbars="false"
        android:scrollbarSize="10dp">
        <!--<android.support.v7.widget.Toolbar-->
            <!--android:id="@+id/toolbar"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="56dp"-->
            <!--android:background="?attr/colorPrimary"-->
            <!--android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"-->
            <!--app:layout_constraintTop_toTopOf="parent"-->
            <!--app:layout_constraintRight_toRightOf="parent"-->
            <!--app:layout_constraintLeft_toLeftOf="parent"/>-->

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >

            <TextView
                android:id="@+id/recipeName"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="300sp"
                app:autoSizeStepGranularity="2sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/sourceDisplayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="30sp"
                app:autoSizeStepGranularity="2sp"
                app:layout_constraintTop_toBottomOf="@id/recipeName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <ImageButton
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_edit_black_24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/recipeImage"
                app:layout_constraintRight_toLeftOf="@id/recipeImage"
                app:layout_constraintBottom_toTopOf="@id/delete_button"
                android:onClick="editRecipeActivity"/>
            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_delete_black_24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_button"
                app:layout_constraintRight_toLeftOf="@id/recipeImage"
                app:layout_constraintBottom_toBottomOf="@id/recipeImage"
                android:onClick="deleteRecipe"
                />

            <ImageView
                android:id="@+id/recipeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:maxWidth="300dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_placeholder"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recipeName" />
            <ImageButton
                android:id="@+id/takePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_photo_camera_black_24dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/recipeImage"
                app:layout_constraintBottom_toTopOf="@+id/shareRecipe"
                app:layout_constraintTop_toTopOf="@+id/recipeImage"
                android:onClick="takePicture"
                />
            <ImageButton
                android:id="@+id/shareRecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_share_black_small"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/recipeImage"
                app:layout_constraintTop_toBottomOf="@+id/takePhoto"
                app:layout_constraintBottom_toBottomOf="@+id/recipeImage"
            />

            <TextView
                android:id="@+id/totalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/servings"
                app:layout_constraintTop_toBottomOf="@id/recipeImage"
                android:paddingTop="16dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/servings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/totalTime"
                app:layout_constraintTop_toBottomOf="@id/recipeImage"
                android:paddingTop="16dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/ingredients"
                android:layout_width="550dp"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:lineSpacingExtra="2dp"
                android:textSize="20dp"
                android:text="Ingredients:\n"
                app:layout_constraintTop_toBottomOf="@id/servings"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/notes"
                android:layout_width="550dp"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:lineSpacingExtra="2dp"
                android:textSize="18sp"
                android:text="Notes: \n"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ingredients"
                android:visibility="invisible"/>
            <Button
                android:id="@+id/directions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DIRECTIONS"
                android:textSize="24sp"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@id/notes"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <Button
                android:id="@+id/add_to_cookbook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cookbook"
                android:textSize="24sp"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@id/directions"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:onClick="addToCookbook"/>
            <TextView
                android:id="@+id/attribution_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/add_to_cookbook"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:autoLink="web"
                android:paddingTop="30dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:paddingBottom="2dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/attribution_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/attribution_url"
                android:padding="2dp"
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/attribution_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/attribution_text"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:paddingTop="2dp"
                android:paddingBottom="26dp"
                />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
